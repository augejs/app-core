{
  "name": "@augejs/core",
  "version": "1.0.6",
  "description": "`@augejs/core` is a module framework which support using `dependency injection` way to composite kinds of `Modules` and `Providers` to complex application.",
  "main": "dist/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "rimraf dist && tsc --build ./tsconfig.json",
    "changelog:first": "standard-changelog -f",
    "changelog": "standard-changelog",
    "deploy": "npm run build && npm publish --access public",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "build:apiDoc": "rimraf apiDocs && typedoc --tsconfig ./tsconfig.json --options ./typedoc.config.json && mkdir -p ./apiDocs/docs/assets && cp -r ./docs/assets/* ./apiDocs/docs/assets",
    "deploy:apiDoc": "npm run build:apiDoc && gh-pages -d apiDocs",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augejs/core.git"
  },
  "author": "Alex.Zhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/augejs/core/issues"
  },
  "homepage": "https://augejs.github.io/docs/",
  "dependencies": {
    "@augejs/provider-scanner": "1.0.4",
    "@types/extend": "^3.0.1",
    "@types/object-path": "^0.11.0",
    "extend": "^3.0.2",
    "inversify": "^5.0.5",
    "object-path": "^0.11.5",
    "reflect-metadata": "^0.1.13",
    "yargs-parser": "^20.2.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitlint": "^12.1.1",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "standard-changelog": "^2.0.27",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
